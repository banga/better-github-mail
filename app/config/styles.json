{
    "link": {
        "text-decoration": "none",
        "color": "#4078c0"
    },
    "proportional": {
        "font-family": "Helvetica,Arial,sans-serif"
    },
    "monospace": {
        "font-family": "Consolas,\"Liberation Mono\",Menlo,Courier,monospace"
    },
    "date": {
        "color": "#666"
    },
    "commit": {
        "background": "#e6f1f6",
        "border": "solid 1px #c5d5dd",
        "border-radius": "3px",
        "font-family": "Consolas,\"Liberation Mono\",Menlo,Courier,monospace",
        "font-size": "11pt",
        "margin-bottom": "1em",
        "max-width": "900px",
        "title": {
            "margin": "10px",
            "link": {
                "text-decoration": "none",
                "color": "#000"
            }
        },
        "message": {
            "margin": "0 0 10px 0",
            "padding": "0 10px",
            "block": {
                "white-space": "pre-wrap"
            }
        },
        "footer": {
            "border-top": "solid 1px #d8e6ec",
            "margin": "0 10px",
            "padding": "10px 0",
            "sha": {
                "color": "#444",
                "float": "right",
                "line-height": "24px"
            },
            "commiter": {
                "avatar": {
                    "display": "inline-block",
                    "overflow": "hidden",
                    "line-height": "1",
                    "vertical-align": "middle",
                    "border-radius": "3px",
                    "margin-right": "3px"
                }
            }
        },
        "files": {
            "margin": "20px 10px 10px",
            "file": {
                "type": {
                    "display": "inline-block",
                    "width": "12px",
                    "line-height": "11px",
                    "padding-top": "1px",
                    "text-align": "center",
                    "border": "solid 1px",
                    "border-radius": "2px",
                    "vertical-align": "top",
                    "margin-right": "3px",
                    "added": {
                        "border-color": "#6cc644",
                        "color": "#6cc644"
                    },
                    "removed": {
                        "border-color": "#bd2c00",
                        "color": "#bd2c00"
                    },
                    "modified": {
                        "border-color": "#d0b44c",
                        "color": "#d0b44c"
                    },
                    "unknown": {
                        "border-color": "#ccc",
                        "color": "#ccc"
                    }
                }
            }
        },
        "comment": {
            "background": "#e6f1f6",
            "border": "solid 1px #c5d5dd",
            "border-radius": "3px",
            "font-family": "Consolas,\"Liberation Mono\",Menlo,Courier,monospace",
            "font-size": "11pt",
            "margin-bottom": "1em",
            "max-width": "900px",
            "title": {
                "margin": "10px",
                "link": {
                    "text-decoration": "none",
                    "color": "#000"
                }
            },
            "sender": {
                "avatar": {
                    "display": "inline-block",
                    "overflow": "hidden",
                    "line-height": "1",
                    "vertical-align": "middle",
                    "border-radius": "3px",
                    "margin-right": "3px"
                }
            },
            "body": {
                "background": "white",
                "margin": "0",
                "padding": "10px",
                "white-space": "pre-wrap"
            }
        }
    },
    "footer": {
        "color": "#666",
        "link": {
            "color": "#74a1da"
        },
        "extension-link": {
            "text-decoration": "none",
            "color": "#fff"
        }
    }
}
